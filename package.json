{
  "name": "@carpasse/web-components-poc",
  "version": "0.1.0",
  "description": "Exploring the possibilities of web components",
  "main": "./dist/cjs/index.js",
  "module": "./dist/cjs/index.mjs",
  "type": "commonjs",
  "types": "./dist/cjs/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "keywords": [
    "node",
    "typescript",
    "open-source",
    "template"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carpasse/node-open-source-project-template.git"
  },
  "scripts": {
    "test": "node --import tsx --no-warnings --test src/**/*.test.ts",
    "test:watch": "node --import tsx --no-warnings --test --watch ./src/**/*.test.ts",
    "test:coverage": "node --import tsx --no-warnings --test --experimental-test-coverage ./src/**/*.test.ts",
    "watch": "webpack --config webpack.config.js --mode development --watch",
    "build": "webpack --config webpack.config.js --mode production",
    "clean": "rimraf dist",
    "lint": "eslint './**/*.{js,jsx,ts,tsx}' && npm run typecheck",
    "lint:fix": "eslint './**/*.{js,jsx,ts,tsx}' --fix",
    "lint:ci": "eslint './**/*.{js,jsx,ts,tsx}' --fix",
    "typecheck": "tsc --noEmit",
    "husky:setup": "npx husky add .husky/pre-commit \"npm run pre-commit\" && npx husky add .husky/pre-push \"npm run pre-push\" && npx husky add .husky/commit-msg \"npm run commitlint\"",
    "husky": "npx husky install && npm run husky:setup",
    "prepare": "shx test -d .husky || npm run husky",
    "pre-commit": "pretty-quick --staged && npm run lint",
    "pre-push": "npm run test",
    "commitlint": "commitlint --edit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "author": "Carlos Serrano",
  "license": "NO LICENSE",
  "publishConfig": {
    "access": "restricted"
  },
  "engines": {
    "node": ">=18.x"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^11.0.2",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@storybook/addon-essentials": "^7.6.13",
    "@storybook/addon-links": "^7.6.13",
    "@storybook/blocks": "^7.6.13",
    "@storybook/web-components": "^7.6.13",
    "@storybook/web-components-webpack5": "^7.6.13",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.10.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.55.0",
    "eslint-config-ts-mailonline": "^3.0.0",
    "eslint-plugin-storybook": "^0.6.15",
    "husky": "^8.0.3",
    "lit": "^3.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "semantic-release": "^23.0.0",
    "shx": "^0.3.4",
    "storybook": "^7.6.13",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "webpack": "^5.90.1",
    "webpack-cli": "^5.1.4"
  }
}
